<!DOCTYPE html>
<head>
	<title>Coilbee - Link Directory</title>
  	<meta name="viewport" content="width=device-width, initial-scale=1">
  	<meta name="description" content="Discover, create and share thematic link libraries.">
	<%= favicon_link_tag %>
  	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> 
   	<%= csrf_meta_tags %> 
</head>
<body>
	<% if not @landing %>
		<%= render 'shared/header.html.erb'%>
	<% end %>
	<div class="container-fluid wrapper">
		<div class="row">
			<% if @library && @library.topic %>
				<div class="col-lg-3 col-lg-offset-1 col-sm-3 col-xs-0 aside-content">
					<%= render 'shared/library_menu.html.erb' %>
				</div>
				<div class="col-lg-7 col-lg-offset-4 col-sm-9 col-sm-offset-3 col-xs-12 main-content">
			<% elsif @landing %>
				<div class="col-xs-12 col-sm-12 hero">
			<% else %>
				<div class="col-lg-10 col-lg-offset-1 col-xs-12 main-content">
			<% end %>
					<%= yield %>
				</div>
	  	</div>
	  	<% if not @landing %>
		  	<div class="row">
		  		<%= render 'shared/footer.html.erb' %>
		  	</div>
		<% end %>
	</div>
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  	(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  	m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  	})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  	ga('create', 'UA-70293405-1', 'auto');
	  	ga('send', 'pageview');
	</script>
</body>
