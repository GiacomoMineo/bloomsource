<!DOCTYPE html>
<head>
  <title>Lalibrary</title>
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> 
   	<%= csrf_meta_tags %> 
</head>
<body>
	<nav class="navbar navbar-fixed-top navbar-default" id="custom-nav">
		<div class="container-fluid">
		<% if current_user %>
			<div class="col-lg-10 col-lg-offset-1 col-xs-12">
		<% else %>
			<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
		<% end %>
			<%= link_to "Linkr", '/', class: "navbar-brand" %>

	        <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </button>

	        <div class="collapse navbar-collapse navHeaderCollapse">
	          <ul class="nav navbar-nav navbar-right">
				<% if current_user %> 
					<li><p class="navbar-text"><%= current_user.email %></p></li> 
					<li><%= link_to "Log out", logout_path, method: "delete" %></li> 
				<% else %> 
					<li><%= link_to "Login", 'login' %></li> 
					<li><%= link_to "Signup", 'signup' %></li> 
				<% end %>
	            <% if current_user && (current_user.editor? || current_user.admin?) %> 
    				<li><%= link_to 'Suggest', "/entries/new" %></li>
				<% end %>
				<% if current_user %>
        		<li>
        			<%= form_tag(tag_search_path, :method => "get", class: "navbar-form navbar-right", id: "search-form", role: "search") do %>
    					<div class="input-group">
      						<%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Tag" %>
      						<span class="input-group-btn">
								<%= submit_tag "Go", class: "btn btn-default" %>
  							</span>
    					</div>
  					<% end %>
	        	</li>
	        	<% end %>
	          </ul>
	        </div>
	      </div>
	    </div>
	  </nav>
	  <div class="container-fluid">

  		<div class="row">
			<% if current_user %> 
				<div class="col-lg-2 col-lg-offset-1 col-sm-3 col-xs-0 hidden-xs">
					<%= render '/layouts/menu'%>
				</div>
				<div class="col-lg-8 col-sm-9 col-xs-12">
					<%= yield %>
				</div>
			<% else %>
				<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
					<%= yield %>
				</div>
			<% end %>
		</div>
	</div>
</body>
