<!DOCTYPE html>
<html>
<head>
  <title>Lalibrary</title>
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> 
   	<%= csrf_meta_tags %> 
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top" id="custom-nav">
	    <div class="container-fluid">
	      <div class="col-lg-1 col-md-1 col-sm-0 col-xs-0"></div>

	      <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">

	        <a href="#" class="navbar-brand"><span id="logo">La Library</span></a>

	        <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	        </button>

	        <div class="collapse navbar-collapse navHeaderCollapse">
	          <ul class="nav navbar-nav navbar-right">
	          	<li>
	          		<% if current_user %> 
					  <ul class="nav navbar-nav navbar-right"> 
					    <li><%= current_user.email %></li> 
					    <li><%= link_to "Log out", logout_path, method: "delete" %></li> 
					  </ul> 
					<% else %> 
					  <ul class="nav navbar-nav navbar-right"> 
					    <li><%= link_to "Login", 'login' %></li> 
					    <li><%= link_to "Signup", 'signup' %></li> 
					  </ul> 
					<% end %>
	          	</li>
	            <li class="dropdown">
	              <a href="#" class="dropdown-toggle active" data-toggle="dropdown">Sections <b class="caret"></b></a>
	              <ul class="dropdown-menu">
	                <li><a href="#">Entrepreneurship</a></li>
	                <li><a href="#">Getting Started</a></li>
	                <li role="separator" class="divider"></li>
	                <li><a href="#">Team</a></li>
	                <li><a href="#">Product</a></li>
	                <li><a href="#">Design</a></li>
	                <li><a href="#">Marketing</a></li>
	                <li><a href="#">Selling</a></li>
	              </ul>
	            </li>
	            <% if current_user && (current_user.editor? || current_user.admin?) %> 
    				<li><%= link_to 'Suggest', "/entries/new" %></li>
				<% end %>
	            <li>
	              <form class="navbar-form navbar-left" role="search">
	                <div class="form-group">
	                  <input type="text" class="form-control" placeholder="Search for tags">
	                </div>
	                <button type="submit" class="btn btn-default">Go</button>
	              </form>
	            </li>
	          </ul>
	        </div>
	      </div>

	      <div class="col-lg-1 col-md-1 col-sm-0 col-xs-0"></div>   
	    </div>
	  </nav>
	  <div class="container-fluid">

  		<div class="row">
    		<div class="col-lg-1 col-md-1 col-sm-0 col-xs-0">
      		<!-- what is this? TODO -->
			</div>
			<% if current_user %> 
	    		<div class="col-lg-3 col-md-3 col-sm-3 col-xs-0 hidden-xs">
	      			<%= render '/layouts/menu'%>
	    		</div>
	    	<% end %>
	  
			<div class="col-lg-7 col-md-7 col-sm-9 col-xs-12">
				<%= yield %>
			</div>

			<div class="col-lg-1 col-md-1 col-sm-0 col-xs-0"></div>
		</div>
	</div>

</body>
</html>
