<h2 class="in-form-title">Edit section</h2>
<%= form_for([@library, @category, @section], :html => {:class => 'in-form'}) do |f| %>
	<div class="in-row">
		<%= f.text_field :name, class: "in-field", id: "sec-topic" %>
		<label class="in-label" for="sec-topic">
	      <span class="in-label-content" data-content="Title">Title</span>
	    </label>
	</div>
	<div class="in-row">
		<%= label_tag 'section[category_id]', "Move to category" %>
		<%= f.collection_select(:category_id, @library.categories, :id, :name, {prompt: true}, {class: "form-control"}) %>
	</div>
	<%= f.submit "Submit", class: "btn btn-primary in-submit" %>
<% end %>
