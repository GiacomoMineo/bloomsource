<div class="create">
  <div class="form">
    <h1>Create new category</h1>
    <!-- Your code here -->
    <%= form_for(@section) do |f| %>
      <%= f.text_field :name, :placeholder => "Title" %>
      <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: true) %>
      <%= f.submit "Submit", class: "btn-submit" %>
    <% end %>
    
  </div>
</div>

