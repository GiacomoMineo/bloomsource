<nav>
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <% @library.categories.each_with_index do |c, index| %>
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="heading1">
          <h4 class="panel-title">
            <a href="#collapse<%= index %>" class="sidebar-header" role="button" data-toggle="collapse" data-parent="#accordion" aria-expanded="false" aria-controls="collapse<%= index %>">
              <%= c.name %>
            </a>
            <div class="pull-right">
              <%= link_to category_path(c), data: {confirm: "Are you sure?"}, :method => :delete do %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>s
            </div>
            <div class="pull-right">
              <%= link_to category_edit_path(c) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            </div>
            <div class="pull-right">
              <%= link_to new_section_path(:cat => c) do %>
                <span class="glyphicon glyphicon-plus pull-right" aria-hidden="true"></span>
              <% end %>
            </div>
          </h4>
        </div>
        <div id="collapse<%= index %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading7">
          <% c.sections.each do |s| %>
            <div class="panel-body">
              <%= link_to s.name, section_path(s) %>           
              <div class="pull-right">
                <%= link_to delete_section_path(s), data: {confirm: "Are you sure?"}, :method => :delete do %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <% end %>
              </div>
              <div class="pull-right">
                <%= link_to section_edit_path(s) do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
              </div>
            </div>
          <% end %> 
        </div>  
      </div>
    <% end %>
    <div class="spacer10"></div>
      <%= link_to new_category_path(:lib => @library) do %>
        <span class="glyphicon glyphicon-plus pull-right" aria-hidden="true"></span>
      <% end %>
  </div>
</nav>
      

