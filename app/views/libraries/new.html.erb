<h1 class="in-form-title">Create a new library</h1>
<%= form_for(@library_new, :html => {:class => 'in-form'}) do |f| %>
	<div class="in-row">
		<%= f.text_field :topic, class: "in-field", id: "lib-topic" %>
		<label class="in-label" for="lib-topic">
	      <span class="in-label-content" data-content="Topic">Topic</span>
	    </label>
	</div>
	<div class="in-row">
		<%= f.text_area :description, class: "in-field", id:"lib-desc" %>
		<label class="in-label" for="lib-desc">
	      <span class="in-label-content" data-content="Description">Description</span>
	    </label>
	</div>
	<%= f.submit "Submit", class: "btn btn-primary in-submit" %>
<% end %>